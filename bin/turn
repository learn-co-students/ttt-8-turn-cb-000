#!/usr/bin/env ruby

require_relative '../lib/turn.rb'

 board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

 puts "Welcome to Tic Tac Toe!"

 display_board(board)

 turn(board)

 user_input = gets.strip

 new_user_input = input_to_index(user_input)

 if valid_move?(board, new_user_input) == true
   move(board, new_user_input)
 else
   turn(board)
 end
